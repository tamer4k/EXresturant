@model EXresturant.Models.Categorie

<br />

<h2 class="text-info">Delete  Category</h2>

<br />




<form asp-action="Delete" method="post">
    <div class="whiteBackground border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Menukaart.Naam" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="MenukaartId" readonly class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Naam" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Naam" readonly class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="DeleteAndBackToListButtonPartial" />
            </div>
        </div>
    </div>
</form>
