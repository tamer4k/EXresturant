@model EXresturant.Models.Menukaart

@{
    ViewData["Title"] = "Delete";
}

<br />

<h2 class="text-info">Delete Menukaart</h2>

<br />

<form asp-action="Delete" method="post">
    <div class="whiteBackground border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Naam" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Naam" readonly class="form-control" />
                <span class="text-danger" asp-validation-for="Naam"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="DeleteAndBackToListButtonPartial" />
            </div>
        </div>
    </div>
</form>
