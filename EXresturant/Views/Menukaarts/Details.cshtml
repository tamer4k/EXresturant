@model EXresturant.Models.Menukaart

@{
    ViewData["Title"] = "Details";
}

<br />

<h2 class="text-info">Details Menukaart</h2>

<br />


<div class="whiteBackground border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Id" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Naam" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Naam" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="EditAndBackToListButtonPartial" model="@Model.Id" />
        </div>
    </div>
</div>
