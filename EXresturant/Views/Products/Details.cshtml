@model EXresturant.Models.Product

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="whiteBackground border">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Id" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Id" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Name" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Name" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Description" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Description" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Price" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Price" readonly class="form-control" />
        </div>
    </div>
    
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Menukaart.Naam" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Menukaart.Naam" readonly class="form-control" />
        </div>
    </div>
    <div class="form-group row">
        <div class="col-2">
            <label asp-for="Categorie.Naam" class="col-form-label"></label>
        </div>
        <div class="col-5">
            <input asp-for="Categorie.Naam" readonly class="form-control" />
        </div>
    </div>

    <div class="form-group row">
        <div class="col-5 offset-2">
            <partial name="EditAndBackToListButtonPartial" model="@Model.Id" />
        </div>
    </div>
</div>
