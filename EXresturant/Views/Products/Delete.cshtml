@model EXresturant.Models.Product

@{
    ViewData["Title"] = "Delete";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2 class="text-info">Delete Product</h2>

<br />

<form asp-action="Delete" method="post">
    <div class="whiteBackground border">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
        @Html.HiddenFor(m => m.Id)

        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Name" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Name" readonly class="form-control" />
                <span class="text-danger" asp-validation-for="Name"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Description" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Description" readonly class="form-control" />
                <span class="text-danger" asp-validation-for="Description"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Price" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Price" readonly class="form-control" />
                <span class="text-danger" asp-validation-for="Price"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Menukaart.Naam" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Menukaart.Naam" readonly class="form-control" />
                <span class="text-danger" asp-validation-for="Menukaart.Naam"></span>
            </div>
        </div>
        <div class="form-group row">
            <div class="col-2">
                <label asp-for="Categorie.Naam" class="col-form-label"></label>
            </div>
            <div class="col-5">
                <input asp-for="Categorie.Naam" readonly class="form-control"  />
                <span class="text-danger" asp-validation-for="Categorie.Naam "></span>
            </div>
        </div>
        
        <div class="form-group row">
            <div class="col-5 offset-2">
                <partial name="DeleteAndBackToListButtonPartial" />
            </div>
        </div>
    </div>
</form>
