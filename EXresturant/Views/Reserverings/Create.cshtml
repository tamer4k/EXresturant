@model Reservering


@{
    ViewData["Title"] = "Create";
}


<br />

<h2 class="text-info">Create Reservering</h2>

<br />
@ViewData["Id"];


<div class="whiteBackground border row">
    <div class="col-8 border-right">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Name" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Name" class="form-control" placeholder="Klant naam" />
                    <span asp-validation-for="Name" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Tafelnummer" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input id="ddlCategories" asp-for="Tafelnummer" class="form-control" />
                    <span asp-validation-for="Tafelnummer" class="text-danger font-weight-bold"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="PhoneNummer" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input asp-for="PhoneNummer" class="form-control" placeholder="0622334455" />
                    <span asp-validation-for="PhoneNummer" class="text-danger"></span>

                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Email" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Email" class="form-control" placeholder="email@hotmail.com" />
                    <span asp-validation-for="Email" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Aantalpersoon" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input asp-for="Aantalpersoon" class="form-control" />
                    <span asp-validation-for="Aantalpersoon" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="Datum" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input id="datepicker" type="text" asp-for="Datum" placeholder="dd-mm-yy" class="form-control" />
                    <span asp-validation-for="Datum" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-2">
                    <label asp-for="BeginTijd" class="col-form-label font-weight-bold"></label>
                </div>
                <div class="col-5">
                    <input id="timepicker" type="text" asp-for="BeginTijd" placeholder="12:00 PM" class="form-control" />

                    <span asp-validation-for="BeginTijd" class="text-danger"></span>
                </div>
            </div>
            <div class="form-group row">
                <div class="col-5 offset-2">
                    <partial name="CreateAndBackToListButtonPartial" />
                </div>
            </div>

        </form>
    </div>

    <div class="col-4">

    
        
    </div>
</div>


@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
    <partial name="_ValidationScriptsPartial" />
    <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
    <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/timepicker/1.3.5/jquery.timepicker.js"></script>


    <script>
        $(function () {
            $('#datepicker').datepicker({
                minDate: 0,
                maxDate: "+1W",
                dateFormat: 'dd-mm-yy',
            });
            $('#timepicker').timepicker({
                timeFormat: 'h:mm p',
                interval: 120,
                minTime: '12:00 PM',
                maxTime: '8:00 PM',
                defaultTime: '12',
                startTime: '12',
                dynamic: false,
                dropdown: true,
                //scrollbar: true
            });
        });
    </script>


}










